{
  "agent": { "metrics_collection_interval": 60, "run_as_user": "root" },
  "metrics": {
    "append_dimensions": { "InstanceId": "${aws:InstanceId}" },
    "metrics_collected": {
      "mem": { "measurement": ["mem_used_percent"], "metrics_collection_interval": 60 },
      "disk": {
        "measurement": ["used_percent"],
        "metrics_collection_interval": 300,
        "resources": [ "/" ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          { "file_path": "/home/appuser/backend/logs/*.log", "log_group_name": "/aws/ec2/app", "log_stream_name": "{instance_id}" },
          { "file_path": "/var/log/syslog", "log_group_name": "/aws/ec2/syslog", "log_stream_name": "{instance_id}" }
        ]
      }
    }
  }
}
